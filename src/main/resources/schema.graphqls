

type Workflow {
    uuid: ID!
    versions: [WorkflowVersion]
    releasedVersionNo: Int!
}

type WorkflowVersion {
    uuid: ID!
    versionNo: Int!
    workflowId: ID!
    name: String
    description: String
    editComment: String
    parentVersionUuid: ID
    createdBy: String!
    createdOn: LocalDateTime
    workflowJson: String!
}

scalar LocalDateTime

input CreateWorkflowRequest {
    name: String!
    description: String
    workflowJson: String!
}

input UpdateWorkflowRequest {
    uuid: ID!
    name: String
    description: String
    comment: String!
    workflowJson: String!
}

type Query {
  allWorkflows: [Workflow]
}

type Mutation {
    createWorkflow ( request : CreateWorkflowRequest ) : Workflow
    updateWorkflow ( request : UpdateWorkflowRequest ) : Workflow
}